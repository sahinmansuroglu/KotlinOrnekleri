<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtSayi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="İlk Sayıyı Girinz"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSayi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="İİkinci Sayıyı Girinz"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="84dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="butonTiklama"
        android:text="Aradaki Sayilari Topla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSayi2" />

    <TextView
        android:id="@+id/textViewSayiList"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="285dp"
        android:layout_height="81dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="136dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="108dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:text="Son  Sayı"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="108dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="İlk Sayı"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cbTek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="Tek Sayılar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSayi2" />

    <CheckBox
        android:id="@+id/cbCift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="Cift Sayılar"
        app:layout_constraintStart_toEndOf="@+id/cbTek"
        app:layout_constraintTop_toBottomOf="@+id/txtSayi2" />
</androidx.constraintlayout.widget.ConstraintLayout>
