<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        app:columnCount="4"

        app:rowCount="5">


        <TextView
            android:id="@+id/eskiSayiTxt"
            android:layout_width="263dp"
            android:layout_height="33dp"
            android:background="@drawable/my_border"
            android:ems="0"
            android:fadingEdge="horizontal|vertical"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:textColor="#B5AFAF"
            android:textSize="25sp"
            app:layout_columnSpan="3" />

        <TextView
            android:id="@+id/islemTxt"
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:background="@drawable/my_border"
            android:ems="0"
            android:fadingEdge="horizontal|vertical"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textColor="#B5AFAF"
            android:textSize="25sp"
            app:layout_columnSpan="1" />

        <TextView
            android:id="@+id/simdikiSayiTxt"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/my_border"
            android:ems="0"
            android:fadingEdge="horizontal|vertical"

            android:lineSpacingExtra="8sp"
            android:paddingRight="5dp"
            android:textAlignment="textEnd"
            android:textSize="50sp"
            app:layout_columnSpan="4" />

        <Button

            android:id="@+id/button12"

            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"
            android:text="1"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button15"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"


            android:onClick="rakamaTiklama"
            android:text="2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button17"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="3"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="clearTiklama"

            android:text="C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="4"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="6"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="islemeTiklama"

            android:text="+"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button7"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="7"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="8"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button10"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="9"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button11"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="islemeTiklama"
            android:text="-"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button20"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="islemeTiklama"

            android:text="/"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button13"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="rakamaTiklama"

            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button14"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="islemeTiklama"

            android:text="x"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button19"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"

            android:onClick="esittireTiklama"
            android:text="="
            android:textSize="20dp"
            android:textStyle="bold" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>